" Globally applicable settings should be applied here, as well as anything else
" that needs to be loaded before the config files get executed.
"
" delegate configuration to discrete files in vim/config dir
for f in split(glob('~/.dotfiles/vim/config/*.vim'), '\n')
  exe 'source' f
endfor

" ... add ignore rules
set wildignore+=*/tmp/*,*.so,*.swp,*.zip     " MacOSX/Linux

let g:spf13_no_neosnippet_expand = 1
